// 流式输出使用 channel
func (r *Runnable) Stream(ctx context.Context, input I) (<-chan Event[O], error) {
    out := make(chan Event[O], 100) // 带缓冲
    
    go func() {
        defer close(out) // 必须关闭
        
        // 检查取消
        select {
        case <-ctx.Done():
            return
        case out <- event:
        }
    }()
    
    return out, nil
}
```

